@model PNN.Web.Models.ContentViewModel
@using System;
@{
    ViewData["Title"] = "Editar";
}
<h4>Publicación</h4>
<hr />
<div class="row">
    <div class="fa-image" style="margin-left: auto;margin-right: auto;display: block;">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Url.Content(Model.ImageUrl)" alt="Image" style="width:400px;height:400px;max-width: 100%; height: auto;" />
        }
    </div>
    <div class="col-md-12">
        <form asp-action="EditContent" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="OwnerId" />
            <input type="hidden" asp-for="ImageUrl" />

            <partial name="_Content" />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Details" asp-route-id="@Model.OwnerId" class="btn btn-success">volver</a>
            </div>
        </form>
    </div>
</div>