@model PNN.Web.Models.ContentViewModel
@{
    ViewData["Title"] = "Crear";
}

<br />
<hr />
<br />
<div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
        <h4>Nueva Publicación</h4>
        <form asp-action="AddContent" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserId" />

            <partial name="_content" />

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a asp-action="Details" asp-route-id="@Model.UserId" class="btn btn-success">volver</a>
            </div>
        </form>
    </div>
</div>