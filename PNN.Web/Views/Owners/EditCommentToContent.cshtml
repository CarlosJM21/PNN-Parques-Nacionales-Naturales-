@model PNN.Web.Models.CommentViewModel
@{
    ViewData["Title"] = "EditCommentToComment";
}
<br />
<hr />
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <h4>Editar Publicación</h4>
        <form asp-action="EditCommentToContent">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ContentId" />
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="DetailsContent" asp-route-id="@Model.ContentId" class="btn btn-success">Volver</a>
            </div>
        </form>
    </div>
</div>