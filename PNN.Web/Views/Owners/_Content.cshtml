@model PNN.Web.Models.ContentViewModel

<div class="form-group">
    <label asp-for="ContentTypeId" class="control-label"></label>
    <select asp-for="ContentTypeId" asp-items="Model.ContentTypes" class="form-control" required></select>
    <span asp-validation-for="ContentTypeId" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="ParkId" class="control-label"></label>
    <select asp-for="ParkId" asp-items="Model.Parks" class="form-control"></select>
    <span asp-validation-for="ParkId" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Description" class="control-label"></label>
    <textarea asp-for="Description" class="form-control" required></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="ImageFile" class="control-label"></label>
    <input asp-for="ImageFile" class="form-control" type="file" />
    <span asp-validation-for="ImageFile" class="text-danger"></span>
</div>