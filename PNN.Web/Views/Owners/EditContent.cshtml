@model PNN.Web.Models.ContentViewModel
@using System;
@{
    ViewData["Title"] = "Editar";
}
<h4>Publicación</h4>
<hr />
<div class="row">
    <div class="fa-image" style="margin-left: auto;margin-right: auto;display: block;">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Url.Content(Model.ImageUrl)" alt="Image" style="width:400px;height:400px;max-width: 100%; height: auto;" />
        }
    </div>
    <div class="col-md-12">
        <form asp-action="EditContent" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="OwnerId" />
            <input type="hidden" asp-for="ImageUrl" />

            <div class="form-group">
                <label asp-for="ContentTypeId" class="control-label"></label>
                <select asp-for="ContentTypeId" asp-items="Model.ContentTypes" class="form-control"></select>
                <span asp-validation-for="ContentTypeId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ParkId" class="control-label"></label>
                <select asp-for="ParkId" asp-items="Model.Parks" class="form-control"></select>
                <span asp-validation-for="ParkId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" class="form-control" type="file" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Like" class="control-label"></label>
                <input asp-for="Like" class="form-control" />
                <span asp-validation-for="Like" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DisLike" class="control-label"></label>
                <input asp-for="DisLike" class="form-control" />
                <span asp-validation-for="DisLike" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Details" asp-route-id="@Model.OwnerId" class="btn btn-success">volver</a>
            </div>
        </form>
    </div>
</div>