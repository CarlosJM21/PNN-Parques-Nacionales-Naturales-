@model PNN.Web.Models.CommentViewModel
@{
    ViewData["Title"] = "AddCommentToContent";
}

<h2>Crear</h2>

<h4>Comentario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddCommentToContent">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ContentId" />
            <input type="hidden" asp-for="OwnerId" />

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="DetailsContent" asp-route-id="@Model.ContentId" class="btn btn-success">Volver</a>
            </div>
        </form>
    </div>
</div>

